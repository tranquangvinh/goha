{% extends 'desktop/master.twig' %}

{% block content %}
     <div id="content-wrapper">
        <!-- TT-TOPHEADING -->
        <div class="tt-topheading background-block" style="background-image:url({{ theme.link }}/assets/img/heading/bg.jpg);">
            <div class="container">
            	<div>
            	</div>	
                <h1 class="tt-topheading-title c-h3">{{ title }}</h1>
                <ul class="tt-breadcrumbs">
                	{{ bc }}
                </ul>
            </div>
        </div>
        <div class="empty-space marg-lg-b100 marg-sm-b50 marg-xs-b30"></div>               

        <div class="container">
            <div class="row">
                <div class="col-md-8">
                	{% for item in posts %}
                    <div class="tt-post-3">
                        <a class="tt-post-3-img custom-hover" href="#">
                            <img class="img-responsive" src="{{ item.thumbnail.src('full') }}" alt="">
                        </a>
                        <div class="tt-post-3-info">
                            <a class="tt-post-3-title c-h5" href="{{ item.link }}">{{ item.get_title }}</a>
                            <a class="tt-post-3-favourite" href="#"><i class="fa fa-star" aria-hidden="true"></i></a>
                            <div class="tt-post-3-label">
                                <span>Bởi <a href="{{ item.author.link }}">{{ item.author.name }}</a></span>
                                <span>{{ item.post_date_modified|date }}</span>
                                
							    {% for term in item.terms('category') %}
							        <span><a href="{{ term.link }}">{{ term.name}}</a></span>
							    {% endfor %}
                            </div>
                            <div class="simple-text size-3">
                                <p>{{ item.get_content|excerpt(60) }}</p>
                            </div>
                            <a class="c-btn type-4" href="{{ item.link }}">Xem thêm </a>
                        </div>
                    </div>
                    <div class="empty-space marg-lg-b30"></div>
                    {% endfor %}
                    <div class="empty-space marg-lg-b50 marg-sm-b30"></div>

                    <!-- tt-custom-pagination -->
                    <ul class="tt-custom-pagination">
                        {% for page in pagination.pages %}
                            {% if page.link %}
                            	<li class="active">
                                    <a href="{{page.link}}" class="{{page.class}} ">{{page.title}}</a>
                                </li>
                            {% else %}
                            	<li class="active">
                                    <span class="{{page.class}}  ">{{page.title}}</span>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                   
                
                    <div class="empty-space marg-sm-b30"></div>                                                             
                </div>
                {% include 'desktop/sidebar.twig' %}
            </div>
            <div class="empty-space marg-lg-b150 marg-sm-b50 marg-xs-b30"></div> 
        </div>
    </div>
          
{% endblock %}

