{% extends 'desktop/master.twig' %}

{% block content %}
    
    <div class="swiper-container" data-autoplay="0" data-loop="1" data-speed="500" data-center="0" data-slides-per-view="1" data-add-slides="2">
        <div class="swiper-wrapper clearfix">
            {% for img in dataSlider %}
                <div class="swiper-slide active" data-val="0">
                    <div class="tt-mslide background-block" style="background-image:url({{ img['attr']['background']['url'] }});">
                        <div class="container">
                            <div class="tt-mslide-inner">
                                <h1 class="c-h1">{{ img['attr']['title'] }}</h1>
                                <div class="simple-text size-2">
                                    <p> {{ img['attr']['description'] }}</p>
                                </div>
                                <a class="c-btn type-1" href="{{ img['attr']['lienKet'] }}">{{ img['attr']['textLink'] }}</a>
                                <div class="empty-space marg-lg-b70 marg-md-b50"></div>
                                <div class="empty-space marg-lg-b200 marg-xs-b160"></div>      
                                <div class="empty-space marg-lg-b170 marg-md-b100 marg-sm-b50 marg-xs-b0"></div>
                                <div class="tt-mslide-img">
                                    <img class="img-responsive" src="{{ img['full_image'] }}"  alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="pagination type-1 pos-1 visible-xs-block"></div>
        <div class="swiper-arrow-left tt-arrow-left type-1 pos-1 hidden-xs"><span class="lnr lnr-chevron-left"></span></div>
        <div class="swiper-arrow-right tt-arrow-right type-1 pos-1 hidden-xs"><span class="lnr lnr-chevron-right"></span></div>                 
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-push-1">
                <div class="title-header">
                    <h1>{{ post.get_field('title') }}</h1>
                    <p>
                        {{ post.get_field('content')}}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- TT-SERVICE -->
        <div class="row">
            <div class="col-sm-10 col-sm-push-1">
                {% for item in post.get_field('dac-diem') %}
                    <div class="col-sm-6 col-md-4">
                        <div class="tt-service type-2 clearfix">
                                <a class="tt-service-icon" href="{{ item['liên_kết'] }}">
                                    {{ item['icon']}}
                                </a>
                                <div class="tt-service-info">
                                    <a class="tt-service-title c-h4" href="{{ item['liên_kết'] }}">{{ item['title']}}</a>
                                    <div class="simple-text size-3">
                                        <p>{{ item['description']}}</p>
                                    </div>
                                </div>
                        </div>
                        <div class="empty-space marg-sm-b30"></div>
                    </div>
                {% endfor %}
            </div>
        </div>               
    </div>
    <div class="empty-space marg-lg-b80 marg-sm-b70"></div>
    <div class="text-center">
        <a class="c-btn type-1 size-2" href="#">Gọi cho chúng tôi</a>
    </div>
    <div class="empty-space marg-lg-b70 marg-sm-b50 marg-xs-b30"></div> 
    <div class="tt-devider"></div>
    <div class="empty-space marg-lg-b60 marg-sm-b40 marg-xs-b30"></div>

    <div class="container">
        <div class="tt-title">
            <h2 class="c-h2"><small>{{ post.get_field('k2-title') }}</small></h2>
        </div>
        <div class="sub-title">
            <h2>
                {{ post.get_field('k2-sub-title') }}
            </h2>
        </div>
        <div class="empty-space marg-lg-b35 marg-sm-b30"></div>
        <div class="tt-tabs-content clearfix mbottom50">
            <div class="tt-tab-info">
                <div class="row">
                    <div class="col-md-10 col-md-push-1">
                        <div class="col-md-5">
                            <div class="simple-text size-3">
                                {{ post.get_field('k2-content')}}
                            </div>
                            <div class="empty-space marg-sm-b30"></div>
                        </div>
                        <div class="col-md-7">
                            <img class="img-responsive" src="{{ post.get_field('k2-hinh-anh') }}" height="333" width="605" alt="">
                        </div>
                    </div>
                </div>                             
            </div>     
        </div>
    </div>
    <div class="empty-space marg-lg-b40 marg-sm-b30"></div>
    <div class="text-center">
        <a class="c-btn type-1 size-2" href="#">Gọi cho chúng tôi</a>
    </div>
    <div class="empty-space marg-lg-b90 marg-sm-b60 marg-xs-b50"></div> 
    <div class="tt-devider"></div>
    <div class="empty-space marg-lg-b70 marg-sm-b40 marg-xs-b30"></div>
    
    <div class="container">
        <div class="tt-title">
            <h2 class="t-h2 c-h2"><small>{{ post.get_field('k3-title') }}</small></h2>
        </div>
        <div class="empty-space marg-lg-b40 marg-sm-b30"></div>

        <!-- tt-post -->
        <div class="row">
            {% for itemPostK3 in posts_k3 %}
            <div class="col-sm-4">
                <div class="tt-post">
                    <a class="tt-post-img custom-hover" href="{{ itemPostK3.link }}">
                        <img class="img-responsive" src="{{ itemPostK3.get_thumbnail.src }}" width="392" height="230" alt="">
                    </a>
                    <div class="tt-post-info">
                        <a class="tt-post-title c-h5" href="{{ itemPostK3.link }}">{{ itemPostK3.get_title }}</a>
                        <div class="tt-post-cat">{{ itemPostK3.get_field('mo-ta') }}</div>
                        <div class="simple-text size-3">
                            <p>{{ itemPostK3.get_content|excerpt(20) }}</p>
                        </div>
                        <a class="c-btn type-4" href="{{ itemPostK3.link }}">Read More </a>   
                    </div>
                </div>
                <div class="empty-space marg-xs-b30"></div>                    
            </div>
            {% endfor %}
        </div>
        <div class="link-k3">
                <a href="{{ link_poject }}">Xem thêm</a>
        </div>
    </div>
    <div class="empty-space marg-lg-b40 marg-sm-b30"></div>
    <div class="text-center">
        <a class="c-btn type-1 size-2" href="#">Gọi cho chúng tôi</a>
    </div>
    <div class="empty-space marg-lg-b65 marg-sm-b45 marg-xs-b30"></div> 
    <div class="tt-devider"></div>
    <div class="empty-space marg-lg-b35 marg-sm-b30"></div>

    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-push-1">
                <div class="tt-title">
                    <h2 class="t-h2 c-h2"><small>{{ post.get_field('k4-title') }}</small></h2>
                </div>
               <div class="empty-space marg-lg-b30 marg-sm-b25"></div>
                {% for itemPostK4 in posts_k4 %}
                    <div class="col-sm-6 col-md-4">
                        <div class="tt-team">
                            <a class="tt-team-img custom-hover" href="{{ itemPostK4.link }}">
                                <img class="img-responsive" src="{{ itemPostK4.get_thumbnail.src }}" height="334" width="287" alt="">
                            </a>
                            <a class="tt-team-title c-h5" href="{{ itemPostK4.link }}">{{ itemPostK4.get_title }}</a>
                            <div class="tt-team-cat">{{ itemPostK4.get_field('mo-ta') }}</div>
                            <div class="simple-text size-3">
                                <p>{{ itemPostK4.get_content }}</p>
                            </div>
                            <ul class="tt-team-social">
                                <li><a href="{{ tie_options['facebook'] }}"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="{{ tie_options['twitter'] }}"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a href="{{ tie_options['instagram'] }}"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                <li><a href="{{ tie_options['linkedin'] }}"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                        <div class="empty-space marg-sm-b30"></div>
                    </div>
                    <div class="clearfix visible-sm-block"></div>
                {% endfor %}
            </div>
           
        </div>
    </div>
    <div class="empty-space marg-lg-b40 marg-sm-b30"></div>
    <div class="text-center">
        <a class="c-btn type-1 size-2" href="#">Gọi cho chúng tôi</a>
    </div>
    <div class="empty-space marg-lg-b85 marg-sm-b50 marg-xs-b30"></div> 
    <div class="tt-devider"></div>
    <div class="empty-space marg-lg-b95 marg-sm-b50 marg-xs-b30"></div>

    <div class="container">
            <!-- TT-TITLE -->
            <div class="t-h2 tt-title">
                <div class="tt-title-cat">{{ post.get_field('k5-sub-title') }}</div>
                <h2 class="c-h2"><small>{{ post.get_field('k5-title') }}</small></h2>
            </div>
            <div class="empty-space marg-lg-b35 marg-sm-b30"></div>

            <!-- tt-post -->
            <div class="row">
                {% for item in posts_k5 %}
                    <div class="col-sm-4">
                        <div class="tt-post">
                            <a class="tt-post-img custom-hover" href="{{ item.link }}">
                                <img class="img-responsive" src="{{ item.get_thumbnail.src }}" width="392" height="230" alt="">
                            </a>
                            <div class="tt-post-info">
                                <a class="tt-post-title c-h5" href="{{ item.link }}">{{ item.get_title }}</a>
                                <div class="tt-post-cat">{{ item.get_field('mo-ta') }}</div>
                                <div class="simple-text size-3">
                                    <p>{{ item.get_content }}</p>
                                </div>
                                <a class="c-btn type-4" href="{{ item.link }}">Read More </a>   
                            </div>
                        </div>
                        <div class="empty-space marg-xs-b30"></div>                    
                    </div>
                {% endfor %}
            </div>
            <div class="empty-space marg-lg-b50 marg-sm-b40 marg-xs-b30"></div> 
            <div class="tt-devider"></div>
            <div class="empty-space marg-lg-b50 marg-sm-b40 marg-xs-b30"></div> 

            <!-- TT-PARTNER -->
            <div class="swiper-container" data-autoplay="5000" data-loop="0" data-speed="500" data-center="0" data-slides-per-view="responsive" data-xs-slides="2" data-sm-slides="3" data-md-slides="3" data-lg-slides="4" data-add-slides="5">
                <div class="swiper-wrapper clearfix">
                    {% for itemImg in dataSliderDoiTac %}
                        <div class="swiper-slide" data-val="0">
                            <a class="tt-partner" href="#">
                                <img class="img-responsive" src="{{ itemImg['full_image'] }}" alt="">
                            </a>
                        </div>
                    {% endfor %} 
                </div>
                <div class="pagination type-1 visible-xs-block"></div>
            </div>
            <div class="empty-space marg-lg-b50 marg-sm-b40 marg-xs-b30"></div> 
    </div>
{% endblock %}

