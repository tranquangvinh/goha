{% extends 'desktop/master.twig' %}

{% block content %}
	<div id="content-wrapper">

        <!-- TT-TOPHEADING -->
        <div class="tt-topheading background-block" style="background-image:url(img/heading/bg.jpg);">
            <div class="container">
                <h2 class="tt-topheading-title c-h3">Team Grid</h2>
                <ul class="tt-breadcrumbs">
                    {{ bc }}
                </ul>
            </div>
        </div>              

        <div class="container">
            <div class="empty-space marg-lg-b95 marg-sm-b50 marg-xs-b30"></div>

            <!-- TT-TITLE -->
            <div class="tt-title">
                <div class="tt-title-cat">{{ post.get_field('title-ngan') }}</div>
                <h2 class="c-h2"><small>{{ post.get_field('title-gioi-thieu') }}</small></h2>
            </div>
            <div class="empty-space marg-lg-b40 marg-sm-b30"></div>


            <!-- TT-TEAM -->
            <div class="row">
			    {% for item in post.get_field('dat-diem-gioi-thieu') %}
                <div class="col-sm-6 col-md-3">
                    <div class="tt-team">
                        <a class="tt-team-img custom-hover" href="#">
                            <img class="img-responsive" src="{{ item['img-sub'] }}" height="334" width="287" alt="">
                        </a>
                        <a class="tt-team-title c-h5" href="#">{{ item['title-sub'] }}</a>
                        <div class="tt-team-cat">{{ item['sub-mo-ta-ngan'] }}</div>
                        <div class="simple-text size-3">
                            <p>{{ item['sub-content'] }}</p>
                        </div>
                        <ul class="tt-team-social">
                            <li><a href="{{ tie_options['facebook'] }}"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                            <li><a href="{{ tie_options['twitter'] }}"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                            <li><a href="{{ tie_options['instagram'] }}"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                            <li><a href="{{ tie_options['linkedin'] }}"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                        </ul>
                    </div>
                    <div class="empty-space marg-sm-b30"></div>
                </div>
                {% endfor %}
            </div>

            <div class="empty-space marg-lg-b150 marg-sm-b50 marg-xs-b30"></div> 
        </div>
    </div>
{% endblock %}