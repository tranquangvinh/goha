{% extends 'desktop/master.twig' %}

{% block content %}
	<div id="content-wrapper">
	    <div class="container">
	        <div class="empty-space marg-lg-b50 marg-sm-b30"></div>
	        <div class="row">
	            <div class="col-md-8">
	                
	                <div class="tt-social-fixed">
	                    <img src="img/blog/social.png" height="293" width="52" alt="">
	                </div>

	                <div class="tt-blog-cat">
	                	{% for cat in post.terms('category') %}
							        <span><a href="{{ cat.link }}">{{ cat.name}}</a></span>
					    {% endfor %}
	                </div>
	                <h2 class="tt-blog-title c-h2">{{ post.get_title }}</h2>
	                <div class="tt-blog-label">
	                    <span>bởi <a href="{{ post.author.link }}">{{ post.author.name }}</a></span>
	                    <span>{{ post.post_date_modified|date }}</span>
	                    <span>3 Comments</span>
	                </div>
	            
	                <div class="empty-space marg-lg-b30"></div>
	                <div class="tt-devider"></div>
	                <div class="empty-space marg-lg-b30"></div>

	                <div class="simple-text">
	                    {{ post.get_content }}
	                </div>
	                <div class="empty-space marg-lg-b55 marg-sm-b30"></div>

	                <div class="tt-blog-tag">
	                    <span><i class="fa fa-tags" aria-hidden="true"></i>Tags:</span>
	                    <a href="#">Sticky</a>,
	                    <a href="#">content</a>,
	                    <a href="#">marketing</a>,
	                    <a href="#">buzz</a>,
	                    <a href="#">flat</a>
	                </div>

	                <div class="empty-space marg-lg-b55 marg-sm-b30"></div>
	                <div class="tt-devider"></div>
	                <div class="empty-space marg-lg-b30"></div>

	                <div class="tt-share clearfix">
	                    <div class="tt-share-left">22 Social Shares</div>
	                    <ul class="tt-share-right">
	                        <li><a class="tt-share-link" href="#"><i class="fa fa-facebook" aria-hidden="true"></i> 2</a></li>
	                        <li><a class="tt-share-link color-2" href="#"><i class="fa fa-twitter" aria-hidden="true"></i> 9</a></li>
	                        <li><a class="tt-share-link color-3" href="#"><i class="fa fa-google-plus" aria-hidden="true"></i> 2</a></li>
	                        <li><a class="tt-share-link color-4" href="#"><i class="fa fa-pinterest-p" aria-hidden="true"></i> 8</a></li>
	                        <li><a class="tt-share-link color-5" href="#"><i class="fa fa-tumblr" aria-hidden="true"></i> 1</a></li>
	                    </ul>
	                </div>
	                <div class="empty-space marg-lg-b30"></div>
	                <!-- TT-AUTHOR -->
	                <div class="tt-author clearfix">
	                    <a class="tt-author-img" href="#">
	                        <img src="img/blog/author.jpg" height="90" width="90" alt="">
	                    </a>
	                    <div class="tt-author-info">
	                        <a class="tt-author-name" href="#">Leo Bran</a>
	                        <div class="simple-text size-3">
	                            <p>Leo is currently based in Tijuana and writing about cybersecurity, culture, policy and shareable things he finds on the Web. Connect via Twitter (<a href="#">@bryanclark</a>)</p>
	                        </div>
	                    </div>
	                </div>
	                <div class="empty-space marg-lg-b50 marg-sm-b30"></div>

	                <h4 class="c-h4">Bài viết liên quan</h4>
	                <div class="empty-space marg-lg-b15"></div>

	                <!-- TT-ARTICLE -->
	                <div class="row">
	                	{% for  item in postss %}
	                    <div class="col-sm-3">
	                        <div class="tt-article">
	                            <a class="tt-article-img custom-hover" href="#">
	                                <img class="img-responsive" src="{{ item.thumbnail.src }}" height="122" width="180" alt="">
	                            </a>
	                            <a class="tt-article-title c-h6" href="#">{{ item.get_title }}</a>
	                            <div class="simple-text size-5">{{ item.get_field('mo-ta') }}</div>
	                        </div>
	                        <div class="empty-space marg-xs-b30"></div>
	                    </div>
	                    {% endfor %}
	                </div>
					
	            </div>
	            {% include 'desktop/sidebar.twig' %}
	        </div>

	        <div class="empty-space marg-lg-b170 marg-sm-b50 marg-xs-b30"></div>           
	    </div>
	</div>

{% endblock %}